<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Canvas.Views.AdminStudentsView"
             Title="AdminStudentsView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
        Text="STUDENTS"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />

        <ListView
        ItemsSource="{Binding Students}"
        SelectedItem="{Binding SelectedStudent}">
        </ListView>

        <Button Text="Add Student" Clicked="Add_Clicked" Style="{StaticResource CommonButtonStyle}"/>
        <Button Text="Remove Student" Clicked="Remove_Clicked" Style="{StaticResource CommonButtonStyle}"/>
        <Button Text="Back" Clicked="Back_Clicked" Style="{StaticResource CommonButtonStyle}"/>

    </VerticalStackLayout>
</ContentPage>